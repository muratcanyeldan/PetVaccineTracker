<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Vaccine"
        style="@style/TextAppearance.App.Title"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextInputLayout"
        android:layout_marginBottom="16dp"
        android:hint="Vaccine Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/vaccineNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextInputLayout"
        android:layout_marginBottom="16dp"
        android:hint="Date Administered">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/vaccineDateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/recurringCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recurring vaccine"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/recurringContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat every: "
            style="@style/TextAppearance.App.Subtitle"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/monthsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:inputType="none"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextInputLayout"
        android:hint="Notes (optional)">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/vaccineNotesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout> 