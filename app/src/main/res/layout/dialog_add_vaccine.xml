<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/vaccineNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vaccine Name"
        android:inputType="text"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/vaccineDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date Administered"
        android:focusable="false"
        android:clickable="true"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:id="@+id/recurringCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recurring vaccine"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/recurringContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat every: "
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/monthsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/months_array"/>
    </LinearLayout>

    <EditText
        android:id="@+id/vaccineNotesInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes (optional)"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:gravity="top"/>

</LinearLayout> 